{
  "name": "workflow-application-token-action",
  "version": "3.0.0",
  "description": "GitHub Action to generate a GitHub Application access token for use in GitHub Actions workflows",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prepare": "lefthook install",
    "test": "mocha --recursive \"src/**/*.test.js\"",
    "build-main": "ncc build --source-map --license licenses.txt --minify src/index.js -o dist/main",
    "build-post": "ncc build --source-map --license licenses.txt --minify src/post.js -o dist/post",
    "build": "npm run build-main && npm run build-post",
    "lint": "prettier --check \"src/**/*.{js,ts}\" && eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,ts}\""
  },
  "keywords": [
    "github-actions",
    "github",
    "actions",
    "github-application",
    "token"
  ],
  "author": "peter-murray",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/peter-murray/workflow-application-token-action"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "https-proxy-agent": "^7.0.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "chai": "^4.4.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-jsonc": "^2.12.2",
    "eslint-plugin-mocha": "^10.3.0",
    "eslint-plugin-no-floating-promise": "^1.0.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unicorn": "^51.0.1",
    "lefthook": "^1.6.1",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0"
  },
  "volta": {
    "node": "20.11.0"
  }
}
